---
import { supabase } from '../../../../public/lib/supabase';
import Layout from '../../../layouts/Layout.astro';
import Menu from '../../../components/Menu.astro';

const { id } = Astro.params;

let servicio = null;
let errorMessage = null;

try {
  const { data, error } = await supabase
    .from('planes_servicios')
    .select('nombre_servicio, plan, descripcion, incluye, precio')
    .eq('id', id)  // Asegúrate de que 'slug' sea el id correcto
    .single();

  if (error) {
    throw error;
  }

  servicio = data;
} catch (error) {
  errorMessage = error.message;
}
---

<Layout title="Confirmar compra">
  <Menu />

  <div class="container mx-auto p-4 bg-white shadow-lg rounded-lg max-w-lg">
    <h1 class="text-2xl font-semibold text-center text-gray-800 mb-6">Confirmar compra</h1>

    {errorMessage ? (
      <p class="text-red-600 text-center">{`Error al cargar los datos: ${errorMessage}`}</p>
    ) : servicio ? (
      <div>
        <h2 class="text-xl font-bold text-gray-800 mb-4">{servicio.nombre_servicio}</h2>
        <p class="text-gray-600"><strong>Plan:</strong> {servicio.plan}</p>
        <p class="text-gray-600"><strong>Qué incluye:</strong></p>
        <ul class="list-disc pl-5 mb-4">
        {(
            Array.isArray(servicio.incluye)
              ? servicio.incluye
              : typeof servicio.incluye === "string"
              ? servicio.incluye.split(",")
              : []
          ).map((item, index) => (
            <li key={index} class="flex space-x-3">
              <span class="text-base text-slate-700">{item.trim()}</span>
            </li>
          ))}
        </ul>
        <p class="text-lg font-bold text-gray-800"><strong>Precio:</strong> ${servicio.precio}</p>

        <h3 class="text-lg font-semibold text-gray-800 mt-6">Seleccione su método de pago</h3>
        <form id="payment-form" data-id={id}>

          <div class="flex items-center mt-4">
            <input type="radio" id="tarjeta" name="metodo_pago" value="tarjeta" class="mr-2" />
            <label for="tarjeta" class="flex items-center">
              <img src="/img/pago/tarjeta.png" alt="Tarjeta de crédito/débito" class="w-22 h-16 mr-2" />
              Tarjeta de crédito/débito
            </label>
          </div>
          <div class="flex items-center mt-4">
            <input type="radio" id="paypal" name="metodo_pago" value="paypal" class="mr-2" />
            <label for="paypal" class="flex items-center">
              <img src="/img/pago/paypal.png" alt="PayPal" class="w-16 h-16 mr-2" />
              PayPal
            </label>
          </div>

          <div class="mt-6 flex justify-between">
            <button type="button" class="bg-gray-500 hover:bg-red-600 text-white py-2 px-4 rounded-lg" onclick="window.history.back();">
              Cancelar
            </button>
            <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded-lg">
              Confirmar
            </button>
          </div>
        </form>
      </div>
    ) : (
      <p class="text-center">Cargando información del servicio...</p>
    )}
  </div>

  <!-- Incluir el archivo JavaScript -->
  <script src="../../../js/payment.js"></script>
  
</Layout>
